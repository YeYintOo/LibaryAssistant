<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane id="AnchorPane" prefHeight="350.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.102" fx:controller="library.assistant.controller.NewmemberController">
   <children>
      <VBox prefHeight="350.0" prefWidth="400.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <JFXTextField fx:id="idField" labelFloat="true" layoutX="10.0" layoutY="112.0" promptText="Student ID" />
            <JFXTextField fx:id="nameField" labelFloat="true" promptText="Name" />
            <JFXTextField fx:id="mobileField" labelFloat="true" layoutX="10.0" layoutY="10.0" promptText="Mobile" />
            <JFXTextField fx:id="addressField" labelFloat="true" layoutX="10.0" layoutY="10.0" promptText="Address" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <JFXButton fx:id="saveBtn" minHeight="100.0" minWidth="180.0" onAction="#saveMember" style="-fx-background-color: #20f00d;" text="Save" />
                  <JFXButton fx:id="cancelBtn" layoutX="10.0" layoutY="10.0" minHeight="100.0" minWidth="180.0" onAction="#closeWindow" style="-fx-background-color: #3dcfd1;" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>
