<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="350.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.assistant.controller.NewbookController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <JFXTextField fx:id="bookField" labelFloat="true" promptText="Book ID" />
            <JFXTextField fx:id="titleField" labelFloat="true" layoutX="10.0" layoutY="10.0" promptText="Book Title" />
            <JFXTextField fx:id="authorField" labelFloat="true" layoutX="10.0" layoutY="10.0" promptText="Author" />
            <JFXTextField fx:id="publisherField" labelFloat="true" layoutX="10.0" layoutY="41.0" promptText="Publisher" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <JFXButton fx:id="saveBtn" onAction="#saveBook" prefHeight="90.0" prefWidth="190.0" style="-fx-background-color: #dfcc0a;" text="Save" />
                  <JFXButton fx:id="cancelBtn" layoutX="10.0" layoutY="10.0" onAction="#closeWindow" prefHeight="90.0" prefWidth="190.0" style="-fx-background-color: #00ffff;" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>
